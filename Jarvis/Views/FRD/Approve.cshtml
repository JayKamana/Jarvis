@model Jarvis.Models.FRD
@{
    ViewBag.Title = "Approve";
}

<h2>Approve FRD</h2>

<div>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <h4>Addition Message.</h4>
        <hr />

        <input type="hidden" id="FrdId" name="FrdId" value="@Model.Id" />

        <input type="hidden" id="DemandOwnerEmail" name="DemandOwnerEmail" value="@Model.User.Email" />

        <input type="hidden" id="FrdName" name="FrdName" value="@Model.Name" />

        <div class="form-group">
            @Html.Label("ManagerEmail", new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.TextBox("ManagerEmail", new { @class = "form-control" })
                @Html.ValidationMessage("ManagerEmail")
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Message", new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.TextArea("Message", new { @class = "form-control" })
                @Html.ValidationMessage("Message")
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" class="btn btn-default" value="Send" />
            </div>
        </div>

    }

    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }


</div>


