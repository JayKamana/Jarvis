@model Jarvis.Models.SMSDemand

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>SMSDemand</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.Sender, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Sender, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Sender, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Content_tr, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.Content_tr, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Content_tr, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Content_en, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.Content_en, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Content_en, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.SMSCodeId, "SMSCodeId", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("SMSCodeId", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.SMSCodeId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input id="form-submit" type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
<script>

    $(function () {

        $('#form-submit').on('click', function () {
            var content = $('#content-tr').val();
            var returnString = content
            //Convert Characters
            returnString = returnString.replace(/ö/g, 'o');
            returnString = returnString.replace(/ç/g, 'c');
            returnString = returnString.replace(/ş/g, 's');
            returnString = returnString.replace(/ı/g, 'i');
            returnString = returnString.replace(/ğ/g, 'g');
            returnString = returnString.replace(/ü/g, 'u');  

            $('#content-tr').val(returnString);

        })

    })

    </script>
}
